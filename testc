import re

def is_valid_ip(ip):
    ip_pattern = r"^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$"
    return re.match(ip_pattern, ip) is not None

# Test the function
ip_address = "192.168.1.1"
if is_valid_ip(ip_address):
    print(f"{ip_address} is a valid IP address")
else:
    print(f"{ip_address} is not a valid IP address")


import subprocess

hostname = "example.com"
result = subprocess.run(['ping', '-c', '4', hostname], stdout=subprocess.PIPE, stderr=subprocess.PIPE)

if result.returncode == 0:
    print(f"{hostname} is reachable")
else:
    print(f"{hostname} is unreachable")


import socket

def check_host(hostname):
    try:
        socket.gethostbyname(hostname)
        print(f"{hostname} is reachable")
    except socket.error:
        print(f"{hostname} is unreachable")

hostname = "example.com"
check_host(hostname)
