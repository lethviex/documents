import os
import pandas as pd

# Set the directory containing your JSON files
json_dir = 'path/to/json/files'

# Initialize an empty list to store DataFrames
dfs = []

# Loop through each file in the directory
for file_name in os.listdir(json_dir):
    if file_name.endswith('.json'):
        # Read JSON file into a DataFrame
        df = pd.read_json(os.path.join(json_dir, file_name))
        dfs.append(df)

# Concatenate all DataFrames into one
combined_df = pd.concat(dfs, ignore_index=True)

# Write combined DataFrame to Excel
excel_file = 'combined_data.xlsx'
combined_df.to_excel(excel_file, index=False)

print(f"Combined data has been saved to {excel_file}")
