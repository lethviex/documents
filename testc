import socket

def check_dns_entry(hostname, entry):
    try:
        ip_addresses = socket.gethostbyname_ex(hostname)[2]
        if entry in ip_addresses:
            return True
        else:
            return False
    except socket.gaierror:
        return False

# Example usage
hostname = "abc.com"
entry_to_check = "abc-dr"
result = check_dns_entry(hostname, entry_to_check)
print(f"DNS entry '{entry_to_check}' exists for {hostname}: {result}")
