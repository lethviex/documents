    <ac:parameter ac:name="printable">true</ac:parameter>
    <ac:parameter ac:name="style">disc</ac:parameter>
    <ac:parameter ac:name="maxLevel">2</ac:parameter>
    <ac:parameter ac:name="minLevel">1</ac:parameter>
    <ac:parameter ac:name="class">rm-contents</ac:parameter>
    <ac:parameter ac:name="exclude">Excluded Heading</ac:parameter>
    <ac:parameter ac:name="type">list</ac:parameter>
    <ac:parameter ac:name="outline">clear</ac:parameter>
</ac:structured-macro>
"""

# Replace the placeholder with the TOC macro
updated_body_storage = body_storage.replace('<p>TOC_PLACEHOLDER</p>', toc_macro)
